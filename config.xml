<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.sintesis.sintesisiphone"
        version   = "1.0">
    <name>SíntesisIp
	</name>

    <description>
        Síntesis IPhone
    </description>

    <author href="http://sintesis.mx" email="admin-web@sintesisdigital.com.mx">
        Asociación Periodística Síntesis
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />
	<feature name="http://api.phonegap.com/1.0/battery"/>
	<feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/contacts"/>
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/media"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/notification"/>
	

    <preference name="phonegap-version" value="2.7.0" />
    <preference name="orientation"      value="portrait" />
    <preference name="target-device"    value="handset" />
    <preference name="fullscreen"       value="true" />
	<preference name="webviewbounce" value="false" />
	<preference name="UIWebViewBounce" value="true" />
	<preference name="HideKeyboardFormAccessoryBar" value="false" />
	  <preference name="stay-in-webview" value="false" />
	<preference name="DisallowOverscroll" value="true" />
	<preference name="stay-in-webview" value="true" />
	 <preference name="ios-statusbarstyle" value="black-translucen" />

    <icon src="imagenes/iconos/iconos/1024.png" />
    <icon src="imagenes/iconos/iconos/57.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="imagenes/iconos/iconos/72.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="imagenes/iconos/iconos/114.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="imagenes/iconos/iconos/144.png"         gap:platform="ios"        width="144" height="144" />
    <icon src="imagenes/iconos/iconos/1024.png"          gap:platform="webos" />
    <icon src="imagenes/iconos/iconos/1024.png"  gap:platform="winphone" />
    <icon src="imagenes/iconos/iconos/1024.png" gap:platform="winphone"   gap:role="background" />

    <gap:splash src="imagenes/splashscreen/ldpiv.png"    gap:platform="ios" width="320" height="480" /> 
    <gap:splash src="imagenes/splashscreen/splash_vertical1.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="imagenes/splashscreen/ldpi.png" gap:platform="winphone" />
	
	<plugin name="NetworkStatus" value="CDVConnection" />
	<plugin name="SplashScreen" value="CDVSplashScreen" />
	
	<access origin="*" />
</widget>